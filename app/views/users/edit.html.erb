<h2>edit user</h2>
<br>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
      <%= message %>
  <% end %>
<% end %>

<%= form_with model: @user, data: {turbo: false} do |form| %>
    <p><%= form.label :name, 'name' %></p>
    <p><%= form.text_field :name %></p>

    <p><%= form.label :nickname, 'nickname' %></p>
    <p><%= form.text_field :nickname %></p>

    <p><%= form.label :email %></p>
    <p><%= form.text_field :email %></p>

    <p>if you don't want to change password leave those fields blank</p>
    <p><%= form.label :password %></p>
    <p><%= form.password_field :password %></p>

    <p><%= form.label :password_confirmation %></p>
    <p><%= form.password_field :password_confirmation %></p>
    <p><%= form.submit 'edit' %></p>
<% end %>

<%= button_to 'delete profile', user_path(@user), method: :delete %>
<p><%= link_to 'back', :back %></p>
