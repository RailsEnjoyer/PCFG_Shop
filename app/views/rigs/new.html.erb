<h1>Create new Rig</h1>

<%= form_with(model: @rig, local: true) do |form| %>
  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, class: 'form-control' %><br>
    <%= form.label :brand %>
    <%= form.text_field :brand, class: 'form-control' %><br>
    <%= form.label :form_factor %>
    <%= form.text_field :form_factor, class: 'form-control' %><br>
    <%= form.label :drive_bays %>
    <%= form.number_field :drive_bays, class: 'form-control' %><br>
    <%= form.label :price %>
    <%= form.number_field :price, step: "0.01", class: 'form-control' %><br>
    <%= form.label :rating %>
    <%= form.number_field :rating, step: "0.01", class: 'form-control' %><br>
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', rigs_path %>
