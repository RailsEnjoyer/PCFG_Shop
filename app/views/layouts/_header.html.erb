<header class="header">
<nav class="nav">
          <div class="logo">
            <%= link_to 'PCFG', root_path, class:'logo' %>
          </div>
          <ul class="menu">
            <li class="menu__list">
              <%= link_to 'Home', root_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
               <%= link_to 'Catalogue', catalogue_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'Configurator', configurator_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'News', news_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'About Us', about_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'FAQ / Support', support_path, class:'menu__link' %>
            </li>
          </ul>
          <div class="basket">
            <% if current_user %>
              <a class="basket" href="<%= session_path %>">
                <%= image_tag("logos/cart.png", height: "40px", alt: "cart") %>
              </a>
            <% else %>
              <a class="basket" href="<%= session_path %>">
                <%= image_tag("logos/cart.png", height: "40px", alt: "cart") %>
              </a>
            <% end %>
          </div>
          <div class="menu__login">
            <ul class="menu__login">
              <% if current_user.present? %>
                <li class="menu__list">
                  <%= link_to "@#{current_user.nickname}", user_path(current_user) %>
                </li>
                <li class="menu__list">
                  <%= button_to 'Exit', session_path, method: :delete, class: 'btn-exit' %>
                </li>
              <% else %>
                <li class="menu__list">
                  <%= link_to 'Sign up', new_user_path, class: 'menu__link' %>
                </li>
                <li class="menu__list">
                  <%= link_to 'Log in', new_session_path, class: 'menu__link' %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
        <div id="scroll-up-arrow">
          <img src="/assets/swiper/up.png" alt="Scroll Up" width="40" height="40">
        </div>

        <script>
          var scrollUpArrow = document.getElementById('scroll-up-arrow');
          scrollUpArrow.addEventListener('click', function() {
            window.scrollTo({top: 0, behavior: 'smooth'});
          });
        </script>
        </header>
        