<!DOCTYPE html>
<html>
  <head>
    <title>PCFG Support</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'favicon.ico' %>
    <link href="https://fonts.cdnfonts.com/css/boge" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "main", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag('/support/styles') %>
  </head>
  <body>
<!-- header section starts -->
    <header class="header">
        <nav class="nav">
          <div class="logo">
            <%= link_to 'PCFG', root_path, class:'logo' %>
          </div>
          <ul class="menu">
            <li class="menu__list">
              <%= link_to 'Home', root_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
               <%= link_to 'Catalogue', catalogue_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'Configurator', configurator_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'News', news_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'About Us', about_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'FAQ / Support', support_path, class:'menu__link' %>
            </li>
          </ul>
          <div class="basket">
            <a class="basket" href="#">
              <%= image_tag ("logos/cart.png"), height:"40px", alt:"cart" %>
              <!-- <span>1</span> -->
            </a>
          </div>
          <div class="menu__login">
            <ul class="menu__login">
              <li class="menu__list">
                <a class="menu__link" href="#">Sing up</a>
              </li>
              <li class="menu__list">
                <a class="menu__link" href="#">Login</a>
              </li>
            </ul>
          </div>
        </nav>
    </header>
<!-- header section ends -->
<!-- main section starts -->
   <main>
    <h1>Create new Game</h1>
    <%= form_with(model: @game, local: true) do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %><br>
        <%= form.label :description %>
        <%= form.text_field :description, class: 'form-control' %><br>
        <%= form.label :release_date %>
        <%= form.date_field :release_date, class: 'form-control' %><br>
        <%= form.label :req_cpu_core_count %>
        <%= form.number_field :req_cpu_core_count, class: 'form-control' %><br>
        <%= form.label :req_cpu_thread_count %>
        <%= form.number_field :req_cpu_thread_count, class: 'form-control' %><br>
        <%= form.label :req_cpu_clock %>
        <%= form.number_field :req_cpu_clock, step: 0.01, class: 'form-control' %><br>
        <%= form.label :req_cpu_cache %>
        <%= form.number_field :req_cpu_cache, class: 'form-control' %><br>
        <%= form.label :req_gpu_memory %>
        <%= form.number_field :req_gpu_memory, class: 'form-control' %><br>
        <%= form.label :req_gpu_core_clock %>
        <%= form.number_field :req_gpu_core_clock, step: 0.01, class: 'form-control' %><br>
        <%= form.label :req_gpu_bus_width %>
        <%= form.number_field :req_gpu_bus_width, class: 'form-control' %><br>
        <%= form.label :req_hdd_capacity %>
        <%= form.number_field :req_hdd_capacity, class: 'form-control' %><br>
        <%= form.label :req_ram_memory %>
        <%= form.number_field :req_ram_memory, class: 'form-control' %><br>
        <%= form.label :req_ssd_capacity %>
        <%= form.number_field :req_ssd_capacity, class: 'form-control' %><br>
        <div class="field">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
      </div>
      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= link_to 'Back', games_path %>
   </main>
<!-- main section ends -->
<!-- footer section starts -->
    <footer class="footer">
      <nav class="nav">
          <div class="logo">
            <%= link_to 'PCFG', root_path, class:'logo' %>
          </div>
          <ul class="menu">
            <li class="menu__list">
              <%= link_to 'Home', root_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
               <%= link_to 'Catalogue', catalogue_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'Configurator', configurator_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'News', news_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'About Us', about_path, class:'menu__link' %>
            </li>
            <li class="menu__list">
              <%= link_to 'FAQ / Support', support_path, class:'menu__link' %>
            </li>
          </ul>
          <ul class="social">
            <li class="social__item">
              <%= link_to(image_tag("logos/yt.png", height: "40px", alt: "cart"), "https://www.youtube.com/") %>
            </li>
            <li class="social__item">
              <%= link_to(image_tag("logos/tg.png", height: "40px", alt: "cart"), "https://telegram.org/") %>
            </li>
            <li class="social__item">
              <%= link_to(image_tag("logos/inst.png", height: "40px", alt: "cart"), "https://www.instagram.com/") %>
            </li>
          </ul>
        </nav>
    </footer>
<!-- footer section ends -->
    </div>
  </body>
</html>
