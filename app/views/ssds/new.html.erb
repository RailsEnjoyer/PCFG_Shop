<h1>Create new SSD</h1>

<%= form_with(model: @ssd, local: true) do |form| %>
  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, class: 'form-control' %><br>
    <%= form.label :brand %>
    <%= form.text_field :brand, class: 'form-control' %><br>
    <%= form.label :capacity %>
    <%= form.number_field :capacity, class: 'form-control' %><br>
    <%= form.label :interface %>
    <%= form.text_field :interface, class: 'form-control' %><br>
    <%= form.label :form_factor %>
    <%= form.text_field :form_factor, class: 'form-control' %><br>
    <%= form.label :read_speed %>
    <%= form.text_field :read_speed, class: 'form-control' %><br>
    <%= form.label :write_speed %>
    <%= form.text_field :write_speed, class: 'form-control' %><br>
    <%= form.label :compatible_interface %>
    <%= form.text_field :compatible_interface, class: 'form-control' %><br>
    <%= form.label :write_resource %>
    <%= form.number_field :write_resource, class: 'form-control' %><br>
    <%= form.label :operating_time %>
    <%= form.number_field :operating_time, class: 'form-control' %><br>
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: 'form-control' %><br>
    <%= form.label :rating %>
    <%= form.number_field :rating, step: 0.01, class: 'form-control' %><br>
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', ssds_path %>
