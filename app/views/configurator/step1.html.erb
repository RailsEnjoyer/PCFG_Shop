<%= form_tag step1_path do %>
  <% @games.each do |game| %>
    <label>
      <%= radio_button_tag 'game_ids[]', game.id, false, { class: 'game-checkbox' } %>
      <%= game.title %>
    </label>
    <br>
  <% end %>
  <br>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag 'Next step', class: 'btn btn-primary', formaction: '/step2' %>
<% end %>
